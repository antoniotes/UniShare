<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/root_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_insegnamento"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:cardBackgroundColor="@color/menuBackground"
        app:cardCornerRadius="4dp"
        android:layout_margin="12dp"
        app:cardElevation="6dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/insegnamento_cover"
            android:scaleType="fitXY"
            android:src="@drawable/baseline_folder_24"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/titoloInsegnamento"
        android:textSize="18sp"
        android:text="Insegnamento 1"
        android:fontFamily="@font/montserratbold"
        android:textStyle="bold"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@id/card_insegnamento"
        android:textColor="@color/white"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/profInsegnamento"
        android:maxLines="1"
        android:textSize="14sp"
        android:layout_toRightOf="@id/card_insegnamento"
        android:layout_below="@id/titoloInsegnamento"
        android:text="Antonio Tesoriero"
        android:textColor="@color/white"
        />
    <ImageView
        android:id="@+id/like"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/cuore"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="8dp"/>

</RelativeLayout>